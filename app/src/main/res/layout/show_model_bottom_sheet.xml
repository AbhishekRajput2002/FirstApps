<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/modelbottmtitle"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginEnd="75dp"
        android:text="Show Model Bottom Sheet"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modelbottomdescription"
        android:textAlignment="center"
        android:layout_marginEnd="75dp"
        android:text="A Modal Bottom Sheet is a UI component in Android that slides up from the bottom of the screen and temporarily blocks interaction with the rest of the app. "
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modelbottmtitle" />

    <Button
        android:id="@+id/modelbottomsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="303dp"
        android:layout_marginEnd="318dp"
        android:text="Dismiss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modelbottomdescription" />
</androidx.constraintlayout.widget.ConstraintLayout>